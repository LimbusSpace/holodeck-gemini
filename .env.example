# API Keys (for future use)
OPENAI_API_KEY=your_openai_api_key_here

# Image Generation Configuration
# ==============================
# Protocol: "openai" or "gemini"
IMAGE_GEN_PROTOCOL=gemini
IMAGE_GEN_BASE_URL=https://api.apiyi.com/v1beta/models
IMAGE_GEN_API_KEY=your_image_gen_api_key_here
IMAGE_GEN_MODEL=gemini-3-pro-image-preview

# Tencent Cloud Hunyuan Image API
HUNYUAN_SECRET_ID=your_tencent_secret_id_here
HUNYUAN_SECRET_KEY=your_tencent_secret_key_here

# SiliconFlow API (for Chinese scene analysis)
SILICONFLOW_API_KEY=your_siliconflow_api_key_here

# Custom VLM Configuration (URL + API Key + Model Name)
# =======================================================
# For any OpenAI-compatible VLM API
CUSTOM_VLM_BASE_URL=https://api.example.com/v1
CUSTOM_VLM_API_KEY=your_custom_vlm_api_key_here
CUSTOM_VLM_MODEL_NAME=your_custom_vlm_model_name_here

# Holodeck 3D Generation Backend Configuration
# =============================================

# Backend Priority Configuration
# ------------------------------
# Set the priority order for 3D generation backends
# Format: comma-separated list, first has highest priority
3D_BACKEND_PRIORITY=hunyuan,sf3d

# Disable specific backends if needed
# DISABLE_HUNYUAN_3D=false
# DISABLE_SF3D=false

# ComfyUI SF3D Configuration
# --------------------------
# Enable/disable ComfyUI SF3D backend
COMFYUI_AVAILABLE=true

# ComfyUI server address
COMFYUI_SERVER=127.0.0.1:8189

# SF3D workflow template path (optional)
# SF3D_WORKFLOW_TEMPLATE=holodeck_core/object_gen/sf3d_example.json

# Configuration
HOLODECK_WORKSPACE_ROOT=workspace/sessions
HOLODECK_LOG_LEVEL=INFO

# MCP Server
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8080


# Usage Examples:
# ===============

# Example 1: Hunyuan 3D only
# 3D_BACKEND_PRIORITY=hunyuan
# COMFYUI_AVAILABLE=false

# Example 2: SF3D only
# 3D_BACKEND_PRIORITY=sf3d
# DISABLE_HUNYUAN_3D=true

# Example 3: Auto-select (Hunyuan first, fallback to SF3D)
# 3D_BACKEND_PRIORITY=hunyuan,sf3d
# COMFYUI_AVAILABLE=true

# Example 4: Remote ComfyUI server
# COMFYUI_SERVER=your-server.com:8189
# COMFYUI_AVAILABLE=true

# Example 5: Disable all 3D backends (fallback to image-only mode)
# DISABLE_HUNYUAN_3D=true
# COMFYUI_AVAILABLE=false

# Example 6: Custom VLM with OpenAI-compatible API
# CUSTOM_VLM_BASE_URL=https://api.openai.com/v1
# CUSTOM_VLM_API_KEY=your-openai-key
# CUSTOM_VLM_MODEL_NAME=gpt-4-vision-preview

# Example 7: Custom VLM with SiliconFlow
# CUSTOM_VLM_BASE_URL=https://api.siliconflow.cn/v1
# CUSTOM_VLM_API_KEY=your-siliconflow-key
# CUSTOM_VLM_MODEL_NAME=zai-org/GLM-4.6B

# Example 8: Custom VLM with any compatible API
# CUSTOM_VLM_BASE_URL=https://your-api-endpoint.com/v1
# CUSTOM_VLM_API_KEY=your-api-key
# CUSTOM_VLM_MODEL_NAME=your-model-name